  - host: '{{ hostvars[host].ansible_host | ipwrap }}'
    port: 2181
{% endfor %}
{% endif %}

labels:
  - name: ubuntu-bionic
    min-ready: 1

providers:
  - name: vexxhost-ca-ymq-1
    cloud: vexxhost
    region-name: ca-ymq-1
    boot-timeout: 120
    rate: 0.001
    diskimages:
      - name: ubuntu-bionic
        config-drive: true
    pools:
      - name: main
        labels:
          - name: ubuntu-bionic
            console-log: true
            diskimage: ubuntu-bionic
            flavor-name: v1-standard-2

diskimages:
  - name: ubuntu-bionic
    elements:
      - ubuntu-minimal
      - growroot
      - openssh-server
      - simple-init
      - vm
      - zuul-worker
    release: bionic
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'
      DIB_DISTRIBUTION_MIRROR: 'http://ubuntu.mirror.vexxhost.com/ubuntu'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
